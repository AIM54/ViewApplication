<?xml version="1.0" encoding="utf-8"?>
<com.bian.viewapplication.view.NestedScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bian.viewapplication.activity.EyepetizerActivity">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/mount2" />

    <com.bian.viewapplication.view.NestedScrollListView
        android:id="@+id/lv_below"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.bian.viewapplication.view.NestedScrollLinearLayout>
