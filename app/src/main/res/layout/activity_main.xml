<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bian.viewapplication.MainActivity">


    <com.bian.viewapplication.view.BianView
        android:id="@+id/bianView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp200" />

    <Button
        android:id="@+id/listview_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/behavior_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="behavior" />

        <Button
            android:id="@+id/recycler_new_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recycler" />


        <Button
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="refresh" />
    </LinearLayout>

    <Button
        android:id="@+id/vg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewgroup" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:background="@drawable/textview_bg" />

        <Button
            android:id="@+id/right_button"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp100"
            android:text="@string/update" />
    </LinearLayout>

    <com.bian.viewapplication.view.HorizonalGroup
        android:id="@+id/horizonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp100"
            android:background="@color/green" />

        <View
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp100"
            android:background="@color/colorAccent" />

        <Button
            android:id="@+id/right_menu"
            android:layout_width="@dimen/dp150"
            android:layout_height="@dimen/dp100"
            android:text="@string/update" />
    </com.bian.viewapplication.view.HorizonalGroup>

</LinearLayout>
